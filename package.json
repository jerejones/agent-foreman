{
  "name": "agent-foreman",
  "version": "0.2.0",
  "description": "Long Task Harness for AI agents - task/feature-driven development with external memory",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "agent-foreman": "./dist/index.js"
  },
  "files": [
    "dist",
    "plugins",
    "templates"
  ],
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "npm run build:embed && tsc && chmod +x dist/index.js",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build",
    "version": "npx tsx scripts/sync-version.ts && git add .claude-plugin/marketplace.json plugins/agent-foreman/.claude-plugin/plugin.json",
    "build:embed": "npx tsx scripts/embed-assets.ts",
    "build:bin": "npm run build:embed && bun scripts/build.ts",
    "build:bin:macos": "npm run build:embed && bun scripts/build.ts --target macos",
    "build:bin:linux": "npm run build:embed && bun scripts/build.ts --target linux",
    "build:bin:windows": "npm run build:embed && bun scripts/build.ts --target windows",
    "build:all": "npm run build && npm run build:bin"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "chalk": "^5.3.0",
    "debug": "^4.4.3",
    "glob": "^10.3.10",
    "gray-matter": "^4.0.3",
    "minimatch": "^10.1.1",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/debug": "^4.1.12",
    "@types/node": "^22.19.1",
    "@types/yargs": "^17.0.33",
    "@vitest/coverage-v8": "^4.0.14",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3",
    "vitest": "^4.0.14"
  },
  "keywords": [
    "ai",
    "agent",
    "long-task",
    "harness",
    "task-driven",
    "feature-driven",
    "claude",
    "claude-code",
    "plugin"
  ],
  "author": "Lukin <mylukin@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mylukin/agent-foreman.git"
  },
  "homepage": "https://github.com/mylukin/agent-foreman"
}
